<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/easyFlipView"
        android:layout_margin="5dp"
        app:flipOnTouch="true"
        app:flipDuration="500"
        app:flipEnabled="true">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iciciBack"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/iciciFront"/>
    </com.wajahatkarim3.easyflipview.EasyFlipView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/cardName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:hint="Card Name"/>

            <ImageView
                android:id="@+id/rotateSym"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/rotate"
                android:layout_gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approval Time"
                            android:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Annual Fees"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAlignment="viewEnd"
                            android:gravity="end"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Renewal Feess"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="viewEnd"
                            android:gravity="end"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/approval_Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Approval Time"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/annual_Fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Annual Fees"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>
                        <TextView
                            android:id="@+id/renewal_Fee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Renewal Fees"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:layout_margin="2dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="WebViewLayout"
                    android:orientation="vertical">
                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webView"
                        android:visibility="gone">

                    </WebView>
                    <TextView
                        android:id="@+id/viewDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:gravity="end"
                        android:padding="5dp"
                        android:layout_margin="2dp"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/saveCL"
                    android:layout_margin="5dp">
                    <TextView
                        android:id="@+id/apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:onClick="createLead"
                        android:background="@drawable/button_border"
                        android:layout_gravity="center"
                        tools:ignore="OnClick" />
                </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
